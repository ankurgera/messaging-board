<h1>Post:</h1>

<div>
  <p><b>Title: </b><%= @post.title %> </p>
  <p><b>Body: </b><%= @post.body %> </p>
  <p><b>Posted by: </b><%= posted_by(current_user, @post) %> </p>
</div>

<% if current_user.owner_of?(@post) %>
  <div class="mt-5">
    <%= link_to "Edit this post", edit_post_path(@post) %>
    <%= link_to "Delete this post", @post, data: { turbo_method: :delete }, class: "ml-2" %>
  </div>
<% end %>

<%= render partial: "comments", locals: { comments: @comments, post: @post }, class: "mt-8" %>

<div class="mt-10">
  <%= render partial: "new_comment", locals: { post: @post }%>
</div>

<div class="mt-20">
  <%= button_to "Back to Posts", posts_path, method: :get, id: "back_to_posts" %>
</div>

